async function startProgram() {
  setHeading(0) //sets heading  or direction
  setMainLed(getRandomColor())//Sets random colors on the LED screen
  await delay(0.5) //delays
  setSpeed(60)  //sets speed
  await matrixAnimation(); //starts matrix animation
  while (true) //forever while loop
  {
    await spin(360, 5) //spins half of the 8
    await spin(-360, 5)  //spins other half of the 8
    setMainLed(getRandomColor()) //sets random color on the LED screen
  }
}
async function matrixAnimation() { //makes function for animation
  playMatrixAnimation(0, true);  //plays animation
}

